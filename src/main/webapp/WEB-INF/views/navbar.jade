nav.navbar.navbar-default
    .container-fluid
        .navbar-header
            .navbar-brand Webmarket
        lu.nav.navbar-nav.nav-tabs
            li
                if isAuthorized
                    a(href="/products") Товары
        lu.nav.navbar-nav.navbar-right.nav-tabs
            li
                if isAuthorized
                    .h1 #{user.userName}
            li
                if isAuthorized
                    a(href="/shoppingcart")
                        div(id = 'shoppingCartInfo')
                            img(src='/images/shopping_cart/empty.png', class='img-responsive')
                        div(id = 'shoppingCartCost')
            li
                if isAuthorized
                    a(href="/logout") Выйти
                else
                    a(href="/login") Войти

    script.

        require(['pages/CostShoppingCart'], function (CostShoppingCart) {
            const options = {
                shoppingCartCostElementId: 'shoppingCartCost'
            };
            var navigationMenuCost = new CostShoppingCart(options);
            navigationMenuCost.draw();

        });