doctype html
html
    head
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.css")
        title Регистрация
    body
        include navbar

        .container
                .row
                    .col-md-3
                    .col-md-6
                            .panel-heading
                                h1.panel-title Регистрация

                            .panel-body
                                form(role="form", action="register", modelAttribute="user", method="POST")
                                    .form-group
                                        if error
                                            .alert.alert-danger
                                                strong #{error}

                                        input(type="text", class="form-control", name="userName", placeholder="Логин", required="true")
                                    .form-group
                                        input(type="password", class="form-control", name="password", placeholder="Пароль", required="true")
                                    //.form-group
                                    //    input(type="password", class="form-control", name="password", placeholder="Подтвердите пароль", required="true")
                                    .form-group
                                        input(type="email", class="form-control", name="email", placeholder="E-mail", required="true")
                                    .form-group
                                        input(type="text", class="form-control", name="name", placeholder="Имя", required="true")
                                    .form-group
                                        input(type="text", class="form-control", name="lastName", placeholder="Фамилия", required="true")

                                    button.btn.btn-lg.btn-primary.btn-block(type="submit") Зарегистрироваться
                    .col-md-3